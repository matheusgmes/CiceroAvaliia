            android:id="@+id/button1" android:textSize="20sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="52dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.977"
            android:layout_marginTop="480dp"
