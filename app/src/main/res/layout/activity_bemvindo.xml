<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BemVindo">>


    <TextView
            android:text="Bem-Vindo!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:textSize="64sp"
            android:layout_marginTop="103dp" android:layout_marginBottom="78dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="38dp"
    />
    <TextView
            android:text="O que você deseja avaliar?"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textView8" android:textSize="26sp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginBottom="75dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/button7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp" android:layout_marginEnd="48dp"/>
    <Button
            android:text="Gestão/Coordenação"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button2" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/button7" android:layout_marginBottom="164dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp"/>
    <Button
            android:text="Professores"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button7" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" android:layout_marginBottom="45dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="38dp" android:layout_marginEnd="38dp"/>
</android.support.constraint.ConstraintLayout>